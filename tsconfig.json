{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": [
      "mocha",
      "chai"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2017"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
