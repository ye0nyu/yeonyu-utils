{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "es2015",
    "target": "es2015",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2017",
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}